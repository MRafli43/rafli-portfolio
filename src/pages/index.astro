---
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Muhammad Rafli - Portfolio</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: #fafafa;
        color: #1a1a1a;
        line-height: 1.6;
      }

      @media (prefers-color-scheme: dark) {
        body {
          background: #0a0a0a;
          color: #e5e5e5;
        }
      }

      /* Navigation */
      nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        background: rgba(250, 250, 250, 0.9);
        backdrop-filter: blur(10px);
        z-index: 1000;
        border-bottom: 1px solid #e0e0e0;
      }

      @media (prefers-color-scheme: dark) {
        nav {
          background: rgba(10, 10, 10, 0.9);
          border-bottom-color: #2a2a2a;
        }
      }

      nav .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1.25rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .logo {
        font-size: 1rem;
        font-weight: 600;
        color: #1a1a1a;
        text-decoration: none;
        letter-spacing: -0.01em;
      }

      @media (prefers-color-scheme: dark) {
        .logo {
          color: #e5e5e5;
        }
      }

      .nav-links {
        display: flex;
        gap: 2.5rem;
        list-style: none;
      }

      .nav-links a {
        color: #666;
        text-decoration: none;
        font-size: 0.9375rem;
        font-weight: 400;
        transition: color 0.2s;
        position: relative;
      }

      .nav-links a:hover {
        color: #1a1a1a;
      }

      @media (prefers-color-scheme: dark) {
        .nav-links a {
          color: #999;
        }

        .nav-links a:hover {
          color: #e5e5e5;
        }
      }

      .nav-links a::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 0;
        height: 1px;
        background: #1a1a1a;
        transition: width 0.3s;
      }

      @media (prefers-color-scheme: dark) {
        .nav-links a::after {
          background: #e5e5e5;
        }
      }

      .nav-links a:hover::after {
        width: 100%;
      }

      /* Container */
      .container {
        max-width: 720px;
        margin: 0 auto;
        padding: 0 2rem;
      }

      /* Hero Section */
      .hero {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 6rem 0 4rem;
      }

      .hero-content h1 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        letter-spacing: -0.03em;
        line-height: 1.1;
      }

      .hero-content .subtitle {
        font-size: 1.25rem;
        color: #666;
        font-weight: 400;
        margin-bottom: 2rem;
        line-height: 1.6;
      }

      @media (prefers-color-scheme: dark) {
        .hero-content .subtitle {
          color: #999;
        }
      }

      .social-links {
        display: flex;
        gap: 1.5rem;
        margin-top: 2rem;
      }

      .social-link {
        color: #666;
        transition: color 0.2s;
      }

      .social-link:hover {
        color: #1a1a1a;
      }

      @media (prefers-color-scheme: dark) {
        .social-link {
          color: #999;
        }

        .social-link:hover {
          color: #e5e5e5;
        }
      }

      .social-link svg {
        width: 22px;
        height: 22px;
      }

      /* Section Styles */
      section {
        padding: 5rem 0;
      }

      section h2 {
        font-size: 2.25rem;
        font-weight: 600;
        margin-bottom: 3rem;
        letter-spacing: -0.02em;
      }

      /* About Section */
      .about-grid {
        display: grid;
        grid-template-columns: 180px 1fr;
        gap: 3rem;
        align-items: start;
      }

      .about-image img {
        width: 180px;
        height: 180px;
        border-radius: 50%;
        object-fit: cover;
        object-position: center top;
        border: 2px solid #e0e0e0;
      }

      @media (prefers-color-scheme: dark) {
        .about-image img {
          border-color: #2a2a2a;
        }
      }

      .about-text p {
        font-size: 1.0625rem;
        line-height: 1.75;
        margin-bottom: 1.5rem;
        color: #4a4a4a;
      }

      @media (prefers-color-scheme: dark) {
        .about-text p {
          color: #b3b3b3;
        }
      }

      .about-text strong {
        font-weight: 600;
        color: #1a1a1a;
      }

      @media (prefers-color-scheme: dark) {
        .about-text strong {
          color: #e5e5e5;
        }
      }

      /* Experience Section */
      .experience-item {
        margin-bottom: 3rem;
        padding-bottom: 3rem;
        border-bottom: 1px solid #e0e0e0;
      }

      @media (prefers-color-scheme: dark) {
        .experience-item {
          border-bottom-color: #2a2a2a;
        }
      }

      .experience-item:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
      }

      .experience-header {
        margin-bottom: 1rem;
      }

      .experience-header h3 {
        font-size: 1.375rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
        letter-spacing: -0.01em;
      }

      .experience-meta {
        font-size: 0.9375rem;
        color: #666;
        margin-bottom: 1rem;
      }

      @media (prefers-color-scheme: dark) {
        .experience-meta {
          color: #999;
        }
      }

      .experience-meta strong {
        font-weight: 500;
        color: #1a1a1a;
      }

      @media (prefers-color-scheme: dark) {
        .experience-meta strong {
          color: #e5e5e5;
        }
      }

      .experience-item p {
        font-size: 1.0625rem;
        line-height: 1.7;
        margin-bottom: 1rem;
        color: #4a4a4a;
      }

      @media (prefers-color-scheme: dark) {
        .experience-item p {
          color: #b3b3b3;
        }
      }

      .experience-item ul {
        margin-left: 1.5rem;
        margin-bottom: 1rem;
      }

      .experience-item li {
        margin-bottom: 0.5rem;
        line-height: 1.6;
        color: #4a4a4a;
        font-size: 1.0625rem;
      }

      @media (prefers-color-scheme: dark) {
        .experience-item li {
          color: #b3b3b3;
        }
      }

      /* Projects Section */
      .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 2rem;
      }

      .project-card {
        background: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        padding: 2rem;
        transition: all 0.3s ease;
      }

      @media (prefers-color-scheme: dark) {
        .project-card {
          background: #151515;
          border-color: #2a2a2a;
        }
      }

      .project-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
        border-color: #ccc;
      }

      @media (prefers-color-scheme: dark) {
        .project-card:hover {
          box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
          border-color: #3a3a3a;
        }
      }

      .project-card h3 {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        letter-spacing: -0.01em;
      }

      .project-card p {
        font-size: 0.9375rem;
        color: #666;
        margin-bottom: 1.5rem;
        line-height: 1.6;
      }

      @media (prefers-color-scheme: dark) {
        .project-card p {
          color: #999;
        }
      }

      .project-links {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
      }

      .project-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: #1a1a1a;
        color: #ffffff;
        text-decoration: none;
        border-radius: 6px;
        font-size: 0.875rem;
        font-weight: 500;
        transition: all 0.2s;
      }

      .project-link:hover {
        background: #333;
        transform: translateY(-2px);
      }

      @media (prefers-color-scheme: dark) {
        .project-link {
          background: #e5e5e5;
          color: #1a1a1a;
        }

        .project-link:hover {
          background: #ccc;
        }
      }

      .project-link.secondary {
        background: transparent;
        color: #1a1a1a;
        border: 1px solid #e0e0e0;
      }

      .project-link.secondary:hover {
        background: #f5f5f5;
        border-color: #ccc;
      }

      @media (prefers-color-scheme: dark) {
        .project-link.secondary {
          color: #e5e5e5;
          border-color: #2a2a2a;
        }

        .project-link.secondary:hover {
          background: #1a1a1a;
          border-color: #3a3a3a;
        }
      }

      .project-link svg {
        width: 16px;
        height: 16px;
      }

      /* Footer */
      footer {
        text-align: center;
        padding: 3rem 0;
        color: #999;
        font-size: 0.875rem;
        border-top: 1px solid #e0e0e0;
      }

      @media (prefers-color-scheme: dark) {
        footer {
          border-top-color: #2a2a2a;
        }
      }

      /* Responsive */
      @media (max-width: 768px) {
        nav .container {
          padding: 1rem 1.5rem;
        }

        .nav-links {
          gap: 1.5rem;
        }

        .hero-content h1 {
          font-size: 2.5rem;
        }

        .hero-content .subtitle {
          font-size: 1.125rem;
        }

        section h2 {
          font-size: 1.875rem;
        }

        .about-grid {
          grid-template-columns: 1fr;
          gap: 2rem;
        }

        .about-image img {
          margin: 0 auto;
          display: block;
        }

        .projects-grid {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <!-- Navigation -->
    <nav>
      <div class="container">
        <a href="#" class="logo">Muhammad Rafli</a>
        <ul class="nav-links">
          <li><a href="#about">About</a></li>
          <li><a href="#experience">Experience</a></li>
          <li><a href="#projects">Projects</a></li>
        </ul>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1>Data Scientist &<br/>Machine Learning<br/>Engineer</h1>
          <p class="subtitle">Building intelligent systems that turn data into actionable insights. Specialized in deep learning, NLP, and computer vision.</p>
          
          <div class="social-links">
            <a href="https://github.com/MRafli43" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="GitHub">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
              </svg>
            </a>
            <a href="https://linkedin.com/in/mraflisampurna" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="LinkedIn">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about">
      <div class="container">
        <h2>About</h2>
        <div class="about-grid">
          <div class="about-image">
            <img src="/images/profile.png" alt="Muhammad Rafli" />
          </div>
          <div class="about-text">
            <p>Hi, I'm <strong>Muhammad Rafli</strong>, a <strong>Junior Data Scientist</strong> with a strong focus on <strong>machine learning, data analytics, and applied data science</strong>.</p>
            <p>I enjoy working with real-world data problems — starting from raw, messy data to building analytical models that generate actionable insights. My experience includes developing <strong>LSTM-based sentiment analysis models</strong>, <strong>RFM customer segmentation</strong>, and <strong>computer vision systems</strong> for image classification using deep learning.</p>
            <p>Throughout my projects and internships, I have worked with tools such as <strong>Python, SQL, TensorFlow, scikit-learn</strong>, and <strong>data visualization libraries</strong>, emphasizing model evaluation, interpretability, and practical deployment.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Experience Section -->
    <section id="experience">
      <div class="container">
        <h2>Experience</h2>
        
        <div class="experience-item">
          <div class="experience-header">
            <h3>IT & Data Support Intern</h3>
            <p class="experience-meta"><strong>APIGS Indonesia</strong> · Sep 2024 – Dec 2024</p>
          </div>
          <p>Supported data-driven and technical operations during an internship, contributing to both analytical and system-related tasks.</p>
          <p><strong>Key responsibilities:</strong></p>
          <ul>
            <li>Assisted in data preparation, validation, and reporting to support internal operations</li>
            <li>Collaborated with team members to handle data-related requests and basic system troubleshooting</li>
            <li>Gained hands-on experience in working with structured datasets and operational workflows</li>
          </ul>
        </div>

        <div class="experience-item">
          <div class="experience-header">
            <h3>Data Science Trainee</h3>
            <p class="experience-meta"><strong>Startup Campus – Data Science Track</strong> · Aug 2023 – Dec 2023</p>
          </div>
          <p>Completed an intensive data science program focused on applied analytics and machine learning.</p>
          <p><strong>Key outcomes:</strong></p>
          <ul>
            <li>Built end-to-end data science projects involving data preprocessing, EDA, modeling, and evaluation</li>
            <li>Applied machine learning algorithms to real-world datasets</li>
            <li>Gained hands-on experience with Python, SQL, and data visualization tools</li>
          </ul>
        </div>

        <div class="experience-item">
          <div class="experience-header">
            <h3>AI & Machine Learning Program Participant</h3>
            <p class="experience-meta"><strong>Hacktiv8 x IBM SkillsBuild</strong> · Feb 2024 – Jul 2024</p>
          </div>
          <p>Participated in an AI and Machine Learning program emphasizing practical application and industry-relevant skills.</p>
          <p><strong>Focus areas:</strong></p>
          <ul>
            <li>Machine learning fundamentals and deep learning concepts</li>
            <li>Model development, evaluation, and optimization</li>
            <li>Exposure to real-world AI use cases and project-based assignments</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects">
      <div class="container">
        <h2>Projects</h2>
        <div class="projects-grid">
          {projects.map((project) => (
            <div class="project-card">
              <h3>{project.data.title}</h3>
              {project.data.description && <p>{project.data.description}</p>}
              <div class="project-links">
                <a href={`/projects/${project.slug}`} class="project-link">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                  </svg>
                  Read More
                </a>
                {project.data.github && (
                  <a href={project.data.github} target="_blank" rel="noopener noreferrer" class="project-link secondary">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                    </svg>
                    GitHub
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer>
      <div class="container">
        <p>© {new Date().getFullYear()} Muhammad Rafli. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
