---
import Layout from "../layouts/layout.astro";
import { getEntry, render } from "astro:content";

const entry = await getEntry("about", "index");

if (!entry) {
  throw new Error("About content not found");
}

const { Content } = await render(entry);
---

<Layout title="About - Muhammad Rafli">
  <style>
    .about-header {
      text-align: center;
      margin-bottom: 3rem;
    }

    .about-header h1 {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .about-content {
      max-width: 700px;
      margin: 0 auto;
    }

    .about-content :global(img) {
      width: 200px;
      height: 200px;
      border-radius: 50%;
      object-fit: cover;
      display: block;
      margin: 0 auto 2rem;
      border: 4px solid var(--accent);
      box-shadow: 0 8px 24px rgba(59, 130, 246, 0.2);
    }

    .about-content :global(p) {
      font-size: 1.125rem;
      line-height: 1.8;
      margin-bottom: 1.5rem;
      color: var(--text-secondary);
    }

    .about-content :global(strong) {
      color: var(--text-primary);
      font-weight: 600;
    }

    .skills-section {
      margin-top: 3rem;
      padding: 2rem;
      background: var(--bg-secondary);
      border-radius: 1rem;
      border: 1px solid var(--border);
    }

    .skills-section h2 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
      text-align: center;
    }

    @media (max-width: 768px) {
      .about-header h1 {
        font-size: 2rem;
      }

      .about-content :global(p) {
        font-size: 1rem;
      }
    }
  </style>

  <article>
    <div class="about-header">
      <h1>{entry.data.title}</h1>
    </div>
    
    <div class="about-content">
      <Content />
    </div>
  </article>
</Layout>
