---
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{project.data.title} - Muhammad Rafli</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --bg: #0a0a0a;
        --text-primary: #e5e5e5;
        --text-secondary: #999999;
        --text-muted: #666666;
        --border: #2a2a2a;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: var(--bg);
        color: var(--text-primary);
        line-height: 1.6;
        padding: 4rem 2rem;
      }

      .container {
        max-width: 900px;
        margin: 0 auto;
      }

      .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-secondary);
        text-decoration: none;
        font-size: 0.9375rem;
        margin-bottom: 3rem;
        transition: color 0.2s;
      }

      .back-link:hover {
        color: var(--text-primary);
      }

      .back-link svg {
        width: 18px;
        height: 18px;
      }

      h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 3rem;
        letter-spacing: -0.02em;
        line-height: 1.2;
        color: var(--text-primary);
      }

      /* Article Content */
      article :global(h2) {
        font-size: 1.75rem;
        font-weight: 600;
        margin-top: 3rem;
        margin-bottom: 1.25rem;
        letter-spacing: -0.01em;
        color: var(--text-primary);
      }

      article :global(h2:first-child) {
        margin-top: 0;
      }

      article :global(h3) {
        font-size: 1.375rem;
        font-weight: 600;
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        color: var(--text-primary);
      }

      article :global(h4) {
        font-size: 1.125rem;
        font-weight: 600;
        margin-top: 2rem;
        margin-bottom: 0.75rem;
        color: var(--text-primary);
      }

      article :global(p) {
        font-size: 1rem;
        line-height: 1.7;
        margin-bottom: 1.25rem;
        color: var(--text-secondary);
      }

      article :global(ul),
      article :global(ol) {
        margin-left: 1.75rem;
        margin-bottom: 1.5rem;
        color: var(--text-secondary);
      }

      article :global(li) {
        margin-bottom: 0.5rem;
        line-height: 1.7;
        font-size: 1rem;
      }

      article :global(strong) {
        font-weight: 600;
        color: var(--text-primary);
      }

      article :global(hr) {
        border: none;
        border-top: 1px solid var(--border);
        margin: 3rem 0;
      }

      /* Images - Default */
      article :global(img) {
        width: 100%;
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 2.5rem 0;
      }

      /* Special styling untuk UI screenshots & Cluster */
      article :global(img[src*="SIBIMO"]),
      article :global(img[src*="rfm-cluster"]) {
        max-width: 500px; /* Lebih kecil dari 650px! */
        margin: 3rem auto;
        display: block;
        border: 1px solid var(--border);
      }

      /* Links - NOT PURPLE */
      article :global(a) {
        color: var(--text-primary);
        text-decoration: underline;
        text-decoration-color: var(--text-muted);
        transition: all 0.2s;
        font-weight: 500;
      }

      article :global(a:hover) {
        text-decoration-color: var(--text-primary);
      }

      /* Tables */
      article :global(table) {
        width: 100%;
        border-collapse: collapse;
        margin: 2rem 0;
        font-size: 0.9375rem;
        border: 1px solid var(--border);
        border-radius: 8px;
        overflow: hidden;
      }

      article :global(th),
      article :global(td) {
        padding: 0.875rem 1rem;
        text-align: left;
        border-bottom: 1px solid var(--border);
      }

      article :global(th) {
        background: #151515;
        font-weight: 600;
        color: var(--text-primary);
      }

      article :global(td) {
        color: var(--text-secondary);
      }

      article :global(tr:last-child th),
      article :global(tr:last-child td) {
        border-bottom: none;
      }

      /* Code */
      article :global(code) {
        background: #1a1a1a;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.9em;
        font-family: 'Monaco', 'Courier New', monospace;
        color: var(--text-primary);
      }

      article :global(pre) {
        background: #1a1a1a;
        padding: 1.25rem;
        border-radius: 8px;
        overflow-x: auto;
        margin: 2rem 0;
        border: 1px solid var(--border);
      }

      article :global(pre code) {
        background: transparent;
        padding: 0;
        border-radius: 0;
      }

      article :global(blockquote) {
        border-left: 4px solid var(--border);
        padding-left: 1.25rem;
        margin: 2rem 0;
        font-style: italic;
        color: var(--text-secondary);
      }

      /* Responsive */
      @media (max-width: 768px) {
        body {
          padding: 2rem 1.5rem;
        }

        h1 {
          font-size: 2rem;
        }

        article :global(h2) {
          font-size: 1.5rem;
        }

        article :global(h3) {
          font-size: 1.25rem;
        }

        article :global(img[src*="SIBIMO"]),
        article :global(img[src*="rfm-cluster"]) {
          max-width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <a href="/projects" class="back-link">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Back
      </a>

      <h1>{project.data.title}</h1>

      <article>
        <Content />
      </article>
    </div>
  </body>
</html>
