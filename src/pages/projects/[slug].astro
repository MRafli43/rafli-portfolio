---
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{project.data.title} - Muhammad Rafli</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: #fafafa;
        color: #1a1a1a;
        line-height: 1.6;
        padding: 4rem 2rem;
      }

      @media (prefers-color-scheme: dark) {
        body {
          background: #0a0a0a;
          color: #e5e5e5;
        }
      }

      .container {
        max-width: 720px;
        margin: 0 auto;
      }

      .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: #666;
        text-decoration: none;
        font-size: 0.9375rem;
        margin-bottom: 3rem;
        transition: color 0.2s;
      }

      .back-link:hover {
        color: #1a1a1a;
      }

      @media (prefers-color-scheme: dark) {
        .back-link {
          color: #999;
        }

        .back-link:hover {
          color: #e5e5e5;
        }
      }

      .back-link svg {
        width: 18px;
        height: 18px;
      }

      h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        letter-spacing: -0.02em;
        line-height: 1.2;
      }

      /* Article Content */
      article h2 {
        font-size: 2rem;
        font-weight: 600;
        margin-top: 3rem;
        margin-bottom: 1rem;
        letter-spacing: -0.02em;
      }

      article h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-top: 2.5rem;
        margin-bottom: 0.875rem;
        letter-spacing: -0.01em;
      }

      article h4 {
        font-size: 1.25rem;
        font-weight: 600;
        margin-top: 2rem;
        margin-bottom: 0.75rem;
      }

      article p {
        font-size: 1.0625rem;
        line-height: 1.75;
        margin-bottom: 1.5rem;
        color: #4a4a4a;
      }

      @media (prefers-color-scheme: dark) {
        article p {
          color: #b3b3b3;
        }
      }

      article ul,
      article ol {
        margin-left: 1.75rem;
        margin-bottom: 1.5rem;
      }

      article li {
        margin-bottom: 0.5rem;
        line-height: 1.7;
        font-size: 1.0625rem;
        color: #4a4a4a;
      }

      @media (prefers-color-scheme: dark) {
        article li {
          color: #b3b3b3;
        }
      }

      article strong {
        font-weight: 600;
        color: #1a1a1a;
      }

      @media (prefers-color-scheme: dark) {
        article strong {
          color: #e5e5e5;
        }
      }

      article img {
        width: 100%;
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 2.5rem 0;
        border: 1px solid #e0e0e0;
      }

      @media (prefers-color-scheme: dark) {
        article img {
          border-color: #2a2a2a;
        }
      }

      article table {
        width: 100%;
        border-collapse: collapse;
        margin: 2rem 0;
        font-size: 0.9375rem;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        overflow: hidden;
      }

      @media (prefers-color-scheme: dark) {
        article table {
          border-color: #2a2a2a;
        }
      }

      article th,
      article td {
        padding: 0.875rem 1rem;
        text-align: left;
        border-bottom: 1px solid #e0e0e0;
      }

      @media (prefers-color-scheme: dark) {
        article th,
        article td {
          border-bottom-color: #2a2a2a;
        }
      }

      article th {
        background: #f5f5f5;
        font-weight: 600;
        color: #1a1a1a;
      }

      @media (prefers-color-scheme: dark) {
        article th {
          background: #151515;
          color: #e5e5e5;
        }
      }

      article td {
        color: #4a4a4a;
      }

      @media (prefers-color-scheme: dark) {
        article td {
          color: #b3b3b3;
        }
      }

      article tr:last-child th,
      article tr:last-child td {
        border-bottom: none;
      }

      article code {
        background: #f5f5f5;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.9em;
        font-family: 'Monaco', 'Courier New', monospace;
        color: #1a1a1a;
      }

      @media (prefers-color-scheme: dark) {
        article code {
          background: #1a1a1a;
          color: #e5e5e5;
        }
      }

      article pre {
        background: #f5f5f5;
        padding: 1.25rem;
        border-radius: 8px;
        overflow-x: auto;
        margin: 2rem 0;
        border: 1px solid #e0e0e0;
      }

      @media (prefers-color-scheme: dark) {
        article pre {
          background: #1a1a1a;
          border-color: #2a2a2a;
        }
      }

      article pre code {
        background: transparent;
        padding: 0;
        border-radius: 0;
      }

      article blockquote {
        border-left: 4px solid #e0e0e0;
        padding-left: 1.25rem;
        margin: 2rem 0;
        font-style: italic;
        color: #666;
      }

      @media (prefers-color-scheme: dark) {
        article blockquote {
          border-left-color: #2a2a2a;
          color: #999;
        }
      }

      article a {
        color: #1a1a1a;
        text-decoration: underline;
        text-decoration-color: #e0e0e0;
        transition: text-decoration-color 0.2s;
      }

      article a:hover {
        text-decoration-color: #1a1a1a;
      }

      @media (prefers-color-scheme: dark) {
        article a {
          color: #e5e5e5;
          text-decoration-color: #2a2a2a;
        }

        article a:hover {
          text-decoration-color: #e5e5e5;
        }
      }

      article hr {
        border: none;
        border-top: 1px solid #e0e0e0;
        margin: 3rem 0;
      }

      @media (prefers-color-scheme: dark) {
        article hr {
          border-top-color: #2a2a2a;
        }
      }

      /* Responsive */
      @media (max-width: 768px) {
        body {
          padding: 2rem 1.5rem;
        }

        h1 {
          font-size: 2rem;
        }

        article h2 {
          font-size: 1.5rem;
        }

        article h3 {
          font-size: 1.25rem;
        }

        article h4 {
          font-size: 1.125rem;
        }

        article p,
        article li {
          font-size: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <a href="/projects" class="back-link">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Back
      </a>

      <h1>{project.data.title}</h1>

      <article>
        <Content />
      </article>
    </div>
  </body>
</html>
